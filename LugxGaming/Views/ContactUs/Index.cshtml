@model MessageFormModel

@{
    ViewData["Title"] = "Contact Us";
}

<body>
  <div class="page-heading header-text">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h3>Contact Us</h3>
          <span class="breadcrumb"><a asp-controller="Home" asp-action="Index">Home</a>  >  Contact Us</span>
        </div>
      </div>
    </div>
  </div>

  <div class="contact-page section">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 align-self-center">
          <div class="left-text">
            <div class="section-heading">
              <h6>Contact Us</h6>
              <h2>Say Hello!</h2>
            </div>
            <ul>
              <li><span>Address</span> Sunny Sofia, Carigradsko shose 87, Bulgaria</li>
              <li><span>Phone</span> +359 883988856</li>
              <li><span>Email</span> dinkodh@gmail.com</li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="right-content">
            <div class="row">
              <div class="col-lg-12">
                <div id="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2933.3419377711584!2d23.35729477604399!3d42.675298671165315!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa85c5c728b60b%3A0x77db939aaa374339!2z0JPQtdC-INCc0LjQu9C10LIsINCx0YPQuy4g4oCe0KbQsNGA0LjQs9GA0LDQtNGB0LrQviDRiNC-0YHQteKAnCA4NywgMTExMyDQodC-0YTQuNGP!5e0!3m2!1sbg!2sbg!4v1714395592846!5m2!1sbg!2sbg" width="100%" height="325px" frameborder="0" style="border:0; border-radius: 23px;" allowfullscreen=""></iframe>
                </div>
              </div>
              <div class="col-lg-12">
                <form asp-controller="ContactUs" asp-action="Index" id="contact-form" method="post">
                  <div class="row">
                    @if (ViewBag.isMessageSent != null)
                    {
                        if (ViewBag.isMessageSent)
                        {
                            <div class="alert alert-success" role="alert">
                                The mesage was sent successfully!
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger" role="alert">
                                Message was not sent!
                            </div>
                        }
                    }

                    <div class="col-lg-6">
                        <fieldset>
                            <span asp-validation-for="Name" class="text-warning"></span>
                            <input asp-for="Name" type="text" placeholder="Your Name..." />
                        </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                          <span asp-validation-for="Surname" class="text-warning"></span>
                          <input asp-for="Surname" type="text" placeholder="Your Surname..." />
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                          <span asp-validation-for="Email" class="text-warning"></span>
                          <input asp-for="Email" type="email" placeholder="Your Email..." />
                       </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                          <span asp-validation-for="Subject" class="text-warning"></span>
                          <input asp-for="Subject" type="text" placeholder="Subject..." />
                      </fieldset>
                    </div>
                    <div class="col-lg-12">
                      <fieldset>
                          <span asp-validation-for="Message" class="text-warning"></span>
                          <textarea asp-for="Message" rows="6" placeholder="Your Message..."></textarea>
                      </fieldset>
                    </div>
                    <div class="col-lg-12">
                      <fieldset>
                        <button type="submit" id="form-submit" class="orange-button">Send Message</button>
                      </fieldset>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>  

  <footer>
    <div class="container">
      <div class="col-lg-12">
        <p>Copyright © 2048 LUGX Gaming Company. All rights reserved. &nbsp;&nbsp; Design: Dinko Hristov</p>
      </div>
    </div>
  </footer>
</body>